				</StackLayout>

				<Frame CornerRadius="9" BackgroundColor="#9FC6FF" HeightRequest="45">
					<StackLayout Orientation="Horizontal">
						<Entry
							HorizontalOptions="FillAndExpand"
							Text="{Binding SendMessageInputText}"
							ReturnCommand="{Binding SendMessageCommand, Mode=TwoWay}"
							ClearButtonVisibility="WhileEditing"
						/>
						<Button Text="→" FontSize="50" Padding="-12,-36,-12,-12"
							Command="{Binding SendMessageCommand}" CornerRadius="13" HorizontalOptions="Center" VerticalOptions="Center"
						/>
					</StackLayout>
				</Frame>

				<Button Text="Завершить игру" HorizontalOptions="Center" CornerRadius="9" Padding="10,-10,10,-10"
					Command="{Binding ShowResultsWindowCommand}"
					FontSize="20"
				/>

			</StackLayout>

			<Grid IsVisible="{Binding HintWindowVisibility}">
				<Grid.RowDefinitions>
					<RowDefinition Height="0.172*" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="1*" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="0.1*" />
					<ColumnDefinition Width="320" />
					<ColumnDefinition Width="0.1*" />
				</Grid.ColumnDefinitions>

				<Frame Grid.Row="1" Grid.Column="1" CornerRadius="9" Padding="0"
					   BackgroundColor="Transparent">
					<Grid>
						<Grid BackgroundColor="#4875CD"></Grid>

						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="Auto"/>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="*" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="*" />
							</Grid.RowDefinitions>

							<Grid Padding="3"/>

							<Grid Padding="-2"  Grid.Row="1" Grid.Column="1">
								<Label Text="Подходящая рифма:" FontSize="20" TextColor="White"
								   HorizontalOptions="Center"/>
							</Grid>

							<Grid Padding="10,30,10,10"  Grid.Row="2" Grid.Column="1">
								<Frame HorizontalOptions="Center" BackgroundColor="#D1E1FF" WidthRequest="250" Padding="5" CornerRadius="5">
									<Label Text="" FontSize="Title" TextColor="Black" HorizontalOptions="Center" />
								</Frame>
							</Grid>

							<Grid Padding="-15"  Grid.Row="3" Grid.Column="1">
								<Button HorizontalOptions="Center" Text="ОК" Padding="0,0,0,0" TextColor="White"
									FontSize="20" HeightRequest="70" WidthRequest="70" BackgroundColor="#4875CD"
									Command="{Binding HideHintWindowCommand}"
								/>
							</Grid>
						</Grid>
					</Grid>
				</Frame>
			</Grid>

			<Grid IsVisible="{Binding ResultsWindowVisibility}">
				<Grid.RowDefinitions>
					<RowDefinition Height="0.172*" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="1*" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="0.1*" />
					<ColumnDefinition Width="320" />
					<ColumnDefinition Width="0.1*" />
				</Grid.ColumnDefinitions>

				<Frame Grid.Row="1" Grid.Column="1" CornerRadius="9" Padding="0,-20,0,-20"
					   BackgroundColor="Transparent">
					<Grid>
						<Grid BackgroundColor="#4875CD" Opacity="1"></Grid>

						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="*" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="*" />
							</Grid.RowDefinitions>

							<Grid Grid.Row="1" Padding="0,21,0,0">
								<Label Text="Игра окончена" TextColor="White" FontSize="20" HorizontalOptions="Center"/>
							</Grid>
							<Grid Grid.Row="1" Padding="10,56,0,0">
								<Label Text="Ваше стихотворение:" TextColor="White" FontSize="20" />
							</Grid>
							<Grid Grid.Row="1" Padding="10,80,10,10">
								<Label Text="{Binding MessagesText}" TextColor="White" FontSize="16" />
							</Grid>

							<Grid Grid.Row="2" Padding="10,-15,1,1">
								<Label Text="{Binding TotalScoreText}" TextColor="White" FontSize="16" />
							</Grid>

							<Grid Grid.Row="3" Padding="10,1,1,1">
								<StackLayout Orientation="Horizontal">
									<Button HorizontalOptions="Center" Text="ОК"
											CornerRadius="5" HeightRequest="70" WidthRequest="170"
										Command="{Binding HideResultsWindowCommand}"
									/>
									<Button HorizontalOptions="Center" Text="Share" CornerRadius="5" Command="{Binding SharePoemCommand}"
									/>
								</StackLayout>
							</Grid>

						</Grid>
					</Grid>
				</Frame>
			</Grid>

		</Grid>
	</ContentPage.Content>
</ContentPage>